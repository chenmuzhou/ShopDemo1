<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <!--定义填充渐变颜色-->
    <gradient
        android:startColor="#f53030"
        android:endColor="#f53030"
       />
    <!--设置内填充-->
    <padding android:left="5dp"
        android:top="0dp"
        android:right="5dp"
        android:bottom="1dp"/>
    <stroke
        android:width="0.5dp"
        android:color="#f53030" />
    <!--设置圆角矩形-->
    <corners android:radius="5dp"/>
</shape>